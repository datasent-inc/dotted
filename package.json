{
  "name": "@datasent-inc/dotted",
  "module": "./src/dotted.ts",
  "type": "module",
  "license": "Apache-2.0",
  "version": "1.0.4",
  "author": "Greg Elliot <greg.elliot@datasent.com>",
  "main": "dist/dotted.js",
  "types": "dist/dotted.d.ts",
  "scripts": {
    "build": "bun run ./scripts/build.ts",
    "lint": "bunx eslint",
    "format": "bunx prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json)\"",
    "format:ci": "bunx prettier --ignore-path .prettierignore --check \"**/*.+(js|ts|json)\"",
    "prepack": "bun run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-plugin-dts": "^0.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.+(js|ts|json)": "prettier --write"
  }
}
