{
  "name": "@datasent-inc/dotted",
  "module": "./src/dotted.ts",
  "type": "module",
  "license": "Apache-2.0",
  "version": "1.0.15",
  "repository": {
    "url": "https://github.com/datasent-inc/dotted.git"
  },
  "author": "Greg Elliot <greg.elliot@datasent.com>",
  "main": "dist/dotted.js",
  "types": "dist/dotted.d.ts",
  "scripts": {
    "build": "bun run ./scripts/build.ts",
    "lint": "eslint",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json)\"",
    "format:ci": "prettier --ignore-path .prettierignore --check \"**/*.+(js|ts|json)\"",
    "prepack": "bun run build",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "bun-plugin-dts": "^0.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.3.3",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.+(js|ts|json)": "prettier --write"
  }
}
